<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.test1.bankservices.RequestProcessActivity">

    <TextView
        android:id="@+id/constPayeeTextView"
        android:layout_width="409dp"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        android:gravity="top|left"
        android:paddingLeft="10dp"
        android:text="Purpose"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/purposeTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amountTextView" />

    <TextView
        android:id="@+id/personNameTextView"
        android:layout_width="409dp"
        android:layout_height="50dp"
        android:layout_marginBottom="25dp"
        android:gravity="left|fill_vertical"
        android:paddingLeft="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/constAmountTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constPurposeTextView" />

    <TextView
        android:id="@+id/constAmountTextView"
        android:layout_width="409dp"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        android:gravity="top|left"
        android:paddingLeft="10dp"
        android:text="Amount"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personNameTextView" />

    <TextView
        android:id="@+id/amountTextView"
        android:layout_width="409dp"
        android:layout_height="50dp"
        android:layout_marginBottom="25dp"
        android:gravity="left|fill_vertical"
        android:paddingLeft="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/constPayeeTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constAmountTextView" />

    <TextView
        android:id="@+id/constPurposeTextView"
        android:layout_width="409dp"
        android:layout_height="25dp"
        android:layout_marginTop="50dp"
        android:gravity="bottom|left"
        android:paddingLeft="10dp"
        android:text="Payee"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/purposeTextView"
        android:layout_width="409dp"
        android:layout_height="50dp"
        android:layout_marginBottom="75dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/buttonAccept"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constPayeeTextView" />

    <Button
        android:id="@+id/buttonAccept"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:text="Accept"
        app:layout_constraintBottom_toTopOf="@+id/buttonDecline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purposeTextView" />

    <Button
        android:id="@+id/buttonDecline"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Decline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAccept" />
</androidx.constraintlayout.widget.ConstraintLayout>
